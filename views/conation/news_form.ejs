<div class="container mt-4 mb-3">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="card">
                <h2 class="card-header">Add News Post</h2>
                <div class="card-body">
                    <form action="/addNewsPost" method="POST">
                        <div class="form-group">
                            <label for="productName">Title</label>
                            <input type="text" class="form-control" id="title" name="title" placeholder="Title">
                        </div>
                        <div class="form-group">
                            <label for="productDesc">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="5" placeholder="Description"></textarea>
                        </div>
                        <input id="addPost" type="submit" class="btn btn-main float-right" value="Submit">
                    </form>
                </div>
            </div>
            <div class="col-sm-2"></div>
        </div>
    </div>
</div>