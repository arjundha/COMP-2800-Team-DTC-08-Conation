<div class="container mt-3">
    <div id="productAlert" class="alert alert-success alert-dismissible fade show mt-1" role="alert">
        <strong>Congratulations!</strong> Your product was added successfully. <a href="/track_donations" class="alert-link">Click here to view your products.</a>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>

<div class="container mt-3">
    <div id="productAlertFail" class="alert alert-danger alert-dismissible fade show mt-1" role="alert">
        <strong>Sorry!</strong> Your product was not added. Please try again.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>

<div class="container mt-4 mb-3">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="card">
                <h2 class="card-header">Add Product</h2>
                <div class="card-body">
                    <form action="/addProduct" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="productName">Product Name</label>
                            <input type="text" class="form-control" id="productName" name="productName" placeholder="Hockey Stick" required>
                        </div>
                        <div class="form-group">
                            <label for="productDesc">Description</label>
                            <textarea class="form-control" id="productDesc" name="productDesc" rows="5" placeholder="Description" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="productCost">Price</label>
                            <input type="text" class="form-control" id="productCost" name="productCost" placeholder="0.00" required>
                            <small id="costHelp" class="form-text text-muted">Prices in CAD. Please Do not include a dollar sign ($).</small>
                        </div>
                        <hr>
                        <div class="form-group">
                            <label for="productIMG">Upload Image</label>
                            <input type="file" class="form-control-file" id="productIMG" name="productIMG">
                        </div>
                        <input id="addProduct" type="submit" class="btn btn-main float-right" value="Add Product">
                    </form>
                </div>
            </div>
            <div class="col-sm-2"></div>
        </div>
    </div>
</div>

<script>
    $('#productAlert').hide();
    $('#productAlertFail').hide();

    let urlParams = new URLSearchParams(window.location.search);
    let success = urlParams.get('success');

    if (success === "true") {
        $('#productAlertFail').hide();
        $('#productAlert').show();
    }
    else if (success === "false") {
        $('#productAlert').hide();
        $('#productAlertFail').show();
    }
</script>