<div class="container mt-4 mb-3">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="card">
                <h2 class="card-header">Add Product</h2>
                <div class="card-body">
                    <form action="/addProduct" method="post">
                        <div class="form-group">
                            <label for="productName">Product Name</label>
                            <input type="text" class="form-control" id="productName" name="productName" placeholder="Hockey Stick">
                        </div>
                        <div class="form-group">
                            <label for="productDesc">Description</label>
                            <textarea class="form-control" id="productDesc" name="productDesc" rows="5" placeholder="Description"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="productCost">Price</label>
                            <input type="text" class="form-control" id="productCost" name="productCost" placeholder="0.00">
                            <small id="costHelp" class="form-text text-muted">Prices in CAD. Please Do not include a dollar sign ($).</small>
                        </div>
                        <hr>
                        <div class="form-group">
                            <label for="productIMG">Upload Image</label>
                            <input type="file" class="form-control-file" id="productIMG" name="productIMG" disabled>
                        </div>
                        <input id="addProduct" type="submit" class="btn btn-main float-right" value="Add Product">
                    </form>
                </div>
            </div>
            <div class="col-sm-2"></div>
        </div>
    </div>
</div>