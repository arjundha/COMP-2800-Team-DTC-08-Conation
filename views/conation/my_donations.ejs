<div class="container my-4">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <h2 class="card-header">My Donations</h2>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-12">
                            <h4 class="card-header">
                                Total donations: <%= donations.amount %> <!-- Needs to be fixed -->
                            </h4>
                        </div>
                    </div>
                    <div class="row">
                        <% donations.forEach((donation) => { %>
                        <div class="col-sm-4 my-3">
                            <div class="card">
                                <h4 class="card-header"><%= donation.name%> - <%= donation.cost %></h4>
                                <img class="card-img-top" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcS5joTSfhtGz3w7AD8Gbq_MG1x54hpYdEQHYsTSNvIsaBQCa8h1&usqp=CAU" alt="image to go here">
                                <div class="card-body">
                                    <p class="card-text"><%= donation.description %></p>
                                </div>
                                <div class="card-footer">
                                    <a href="#" class="btn btn-main float-right">More Info</a>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>