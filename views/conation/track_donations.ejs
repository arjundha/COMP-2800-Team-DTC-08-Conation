<div class="container my-4">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <h2 class="card-header">Business Donations</h2>
                <div class="card-body">
                    <div class="row">
                        <% products.forEach((product) => { %>
                            <div class="col-sm-12 col-md-6 col-lg-4 my-3">
                                <div class="card">
                                    <h4 class="card-header"><%= product.name%> <span style="float: right; color: green;">$ ADD AGGREGATE</span></h4>
                                    <img class="card-img-top" src="<%= product.image %>" alt="image to go here">
                                    <div class="card-body">
                                        <p class="card-text"><%= product.description %></p>
                                        <hr>
                                    </div>
                                    <div class="card-footer">
                                        <a href="#" class="btn btn-main float-right">More Info</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>